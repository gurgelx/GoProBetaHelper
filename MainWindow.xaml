<Window x:Class="GoPro_Webcam_Beta_helper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoPro_Webcam_Beta_helper"
        mc:Ignorable="d"
        Title="GoPro Webcam Helper" Height="450" Width="280" Background="#FF4B4B4B" ResizeMode="NoResize">
    <Grid Margin="10,0,10,11">

        <Button Content="Wide" HorizontalAlignment="Center" VerticalAlignment="Top" Height="79" Width="170" Margin="0,15,0,0" Background="#FF2B2B2B" Foreground="White" FontSize="24" FontFamily="Calibri" Click="WideButtonClick"/>
        <Button Content="Narrow" HorizontalAlignment="Center" VerticalAlignment="Top" Height="79" Width="170" Margin="0,94,0,0" Background="#FF2B2B2B" Foreground="White" FontSize="24" FontFamily="Calibri" Click="NarrowButtonClick"/>
        <Button Content="Linear" HorizontalAlignment="Center" VerticalAlignment="Center" Height="79" Width="170" Background="#FF2B2B2B" Foreground="White" FontSize="24" FontFamily="Calibri" Click="LinearButtonClick"/>
        <Label Content="Connected to ip:" HorizontalAlignment="Center" Margin="0,314,0,0" VerticalAlignment="Top" Width="170"/>
        <Label Name="IpLabel" Content="Not Connected" HorizontalAlignment="Center" Margin="0,340,0,0" VerticalAlignment="Top" Width="170" FontWeight="Bold"/>

    </Grid>
</Window>
